<h1> Tipos </h1>

<table>
  <thead>
    <tr>
      <th>Tipo</th>
      <th>Descrição</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipos.each do |tipo| %>
      <tr>
        <td><%= tipo.tipo %></td>
        <td><%= tipo.descricao %></td>
        <td><%= link_to 'Show', tipo %></td>
        <td><%= link_to 'Edit', editar_tipo_path(tipo) %></td>
        <td><%= link_to 'Destroy', tipo_delete_path(tipo), method: :delete, data: { confirm: 'Confirma exclusão?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Descrever Tipo", tipo_new_path %>